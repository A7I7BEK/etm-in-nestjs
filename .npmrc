# Force npm to respect the Node.js version specified in package.json
engine-strict=true

# Use the exact versions specified in package-lock.json
#save-exact=true

# Use the npm registry as the default
#registry=https://registry.npmjs.org/

# Cache configuration for faster installs
#cache=~/.npm
#prefer-offline=true

# Increase network timeout for slow connections (value in milliseconds)
#network-timeout=60000

# Log level configuration - can be set to info, warn, error, or silent
#loglevel=warn